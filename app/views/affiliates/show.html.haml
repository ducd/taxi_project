%section.orders_table.text-center
  .col-md-12
    .container
      %h2= @model.name
      %h4= @model.address
      
      %h2
        = t('cars')
      %hr.tax-line
      -unless @model.cars.nil?
        -@model.cars.each do |car|
          .car-item
            %ul.list-group
              %li.list-group-item
                %b
                  = t('activerecord.attributes.car.brand')
                = car.brand
              %li.list-group-item
                %b
                  = t('activerecord.attributes.car.model')
                = car.car_model
              %li.list-group-item
                %b
                  = t('activerecord.attributes.car.reg_number')
                = car.reg_number
              %li.list-group-item
                %b
                  = t('activerecord.attributes.car.color')
                = car.color
              %li.list-group-item
                %b
                  = t('activerecord.attributes.car.style')
                = car.style
            %hr.tax-line
      -else
        %h3
          = t('no_cars')
%footer.text-center.footer-order
  .footer-top
    .container
      .row
        .footer-col.col-md-6
          %h6
            = link_to t('affiliates'), affiliates_path
        .footer-col.col-md-6
          %h6
            = link_to t('about_us'),about_path
  .footer-below
    .container
      .row
        .col-md-12
          = t('rights')

